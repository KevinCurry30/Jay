<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/comm_title" />


    <EditText
        android:background="@drawable/edit_text_selector"
        android:maxLength="11"
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:hint="请输入手机号"
        android:imeActionId="@+id/login"
        android:imeOptions="actionUnspecified"
        android:inputType="number"
       android:paddingLeft="10dp"
        android:maxLines="1"
        android:singleLine="true" />
<TextView
    android:visibility="invisible"
    android:id="@+id/tv_notice1"
    android:textColor="#FE0000"
    android:layout_marginTop="5dp"
    android:textSize="16sp"
    android:layout_marginLeft="23dp"
    android:text="手机号码不正确"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:background="@drawable/edit_text_selector"
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:layout_weight="6"
            android:hint="请输入验证码" />

        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/bt_getcode"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:layout_weight="4"
            android:background="@drawable/bg_get_code"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </LinearLayout>
    <TextView
        android:visibility="invisible"

        android:id="@+id/tv_notice2"
        android:textColor="#FE0000"
        android:textSize="16sp"
        android:layout_marginLeft="23dp"
        android:text="手机号码不正确"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_psd"
        android:maxLength="16"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_text_selector"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:inputType="textPassword"
        android:hint="请输入您的密码" />
    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_notice3"
        android:textColor="#FE0000"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_marginLeft="23dp"
        android:text="手机号码不正确"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_regist2"
        style="?android:textAppearanceSmall"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:background="@drawable/em_button_login_bg"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
