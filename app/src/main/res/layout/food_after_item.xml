<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_after_icon"
        android:src="@drawable/iv_sex_boy"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tv_food_name"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_alignTop="@+id/iv_after_icon"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/iv_after_icon"
        android:text="鸡蛋"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignStart="@+id/tv_food_name"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:layout_alignLeft="@id/tv_food_name"
        android:layout_below="@id/tv_food_name"
        android:text="2个"
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_food_kcal"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:paddingTop="3dp"
        android:paddingLeft="6dp"
        android:paddingBottom="3dp"
        android:paddingRight="8dp"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:text="122kcal"
        android:layout_alignParentRight="true"
        android:background="@drawable/kuang_red"
        android:layout_height="wrap_content" />
</RelativeLayout>